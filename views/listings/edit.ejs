<% layout("/layouts/boilerplate.ejs")  %>

    <div class="row">
    <div class="col-8 offset-2">
      <h3 class="mt-3">Edit your Listing</h3>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" nonvalidate class="needs-validation " enctype="multipart/form-data">
      <div class="row mb-3">
        <label for="title" class="form-label">Title</label>
      <input name="listing[title]" value="<%= listing.title %>" type="text" class="form-control"/>
    </div>
      <div class="row mb-3">
        <label for="decription" class="form-label">Description</label>
      <textarea name="listing[description]"  class="form-control"> <%= listing.description %> </textarea>
    </div>

    <div class="row mb-3">
      Original Listing Image
    <img src=" <%= originaImageUrl %>"/>
    </div>

    <div class="row mb-3">
      <label for="image" class="form-label">Upload new Image</label>
      <input name="listing[image]"  type="file" class="form-control"/>
    </div>
    <div class="row">
    <div class="row mb-3 col-md-4">
      <label for="price" class="form-label"> Price</label>
      <input name="listing[price]"  value="<%= listing.price %>" type="number" class="form-control" />
    </div > 
     <div class="row mb-3 col-mid-8">
      <label for="location"   class="form-label">Location</label>
      <input
        name="listing[location]"
        value="<%= listing.country %>"
        type="text"
        class="form-control" />
    </div>
  </div>
    <div class="row mb-3">
      <label for="country"   class="form-label">Country</label>
      <input
        name="listing[country]"
        value="<%= listing.location %>"
        type="text"
        class="form-control"/>
        <br><br>
    </div>
      <button class="btn btn-outline-danger ">Edit</button>
    </form>
  </div>
</div>