<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <h1 class="offset-3 col-6">Login For Wanderlust</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="post" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">username</label>
        <input
          type="text"
          name="username"
          id="username"
          class="form-control"
          autocomplete="off"
          required
        />
      </div>

      <div class="mb-3">
        <label for="password" class="form-label"> password</label>
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          autocomplete="off"
          required
        />
      </div>
      <br /><br />
      <button class="btn btn-outline-danger">Login</button>
    </form>
  </div>
</div>
